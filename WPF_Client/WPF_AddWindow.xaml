<Window x:Class="WPF_Client.WPF_AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="WPF_AddWindow" Height="125" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label>Phrase : </Label>
        <TextBox x:Name="TextBoxPhrase" Grid.Column="1" Height="25" VerticalAlignment="Top"></TextBox>

        <Label Grid.Row="1">Answer :</Label>
        <TextBox x:Name="TextBoxAnswer" Grid.Column="1" Grid.Row="1" Height="25" VerticalAlignment="Top" ></TextBox>

        <Button x:Name="BtnAdd" Click="BtnAdd_Click" Grid.Column="1" Grid.Row="1" Height="25" Width="35" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="0,25,25,0">Add</Button>
    </Grid>
</Window>
